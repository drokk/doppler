# ruby version of powershell script of mine.
require 'openssl'
require 'optparse'
require 'pp'
options = {}
options[:hash] = 'sha1'

optparse = OptionParser.new do |opts|
    opts.banner = 'Usage: crypthashsum [options]'

    opts.on('--hash [TYPE]', 'Select hash type (md5, sha1, sha256') do |hash|
        options[:hash] = hash
    end
end

optparse.parse!

pp options
pp ARGV




